{% extends 'base_municipality.jinja2' %}
{% block title %}Daily Waste Register{% endblock %}
{% block description %}List of daily waste register records{% endblock %}
{% block breadcrumbs %}
{% endblock breadcrumbs %}
{% block content %}
  <!-- filter row -->
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-body">
          <form class="form-inline" role="form">
            <div class="form-group">
              <label for="inputEmail3" class="col-sm-2 control-label">Show:</label>
              <label class="checkbox-inline">
                <input name="pending" type="checkbox" id="inlineCheckbox1" value="1" {% if pending is defined %}checked="checked"{% endif %}> Pending
              </label>
              <label class="checkbox-inline">
                <input name="approved" type="checkbox" id="inlineCheckbox2" value="1" {% if approved is defined %}checked="checked"{% endif %}> Approved
              </label>
              <label class="checkbox-inline">
                <input name="rejected" type="checkbox" id="inlineCheckbox3" value="1" {% if rejected is defined %}checked="checked"{% endif %}> Rejected
              </label>
            </div>
            <button type="submit" class="btn btn-primary btn-sm">Update</button>
          </form>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
  </div>
  <!-- /filter row -->

  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">26th April 2014</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tbody>
            <tr>
              <th>Vehicle #</th>
              <th>Skip #</th>
              <th>Skip Type</th>
              <th>Height</th>
              <th>Volume</th>
              <th>Tonnage</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
            {% for daily_waste in daily_wastes %}
              {% set report = daily_waste.submission.json_data %}
            <tr>
              <td>{{ report.vehicle_number }}</td>
              <td>{{ report.skip_number }}</td>
              <td>{{ report.skip_type }}</td>
              <td>{{ report.waste_height }}m</td>
              <td>{% if report.volume %}{{ report.volume }}m<sup>3</sup>{% endif %}</td>
              <td>0.25t</td>
              <td><span class="label label-warning">{{ daily_waste.submission.status }}</span></td>
              <td><button class="btn btn-primary btn-xs">Approve</button></td>
            </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
  </div>
{% endblock %}