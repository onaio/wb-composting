{% extends 'admin_municipalities_list.jinja2' %}
{% block title %}Site Profile{% endblock %}
{% block content %}
  <div class="row">
  <div class="col-md-12">
  <!-- general form elements -->
  <div class="box box-primary">
    <div class="box-header">
      <h3 class="box-title">Add Site Profile</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form class="form-horizontal" data-role="form" method="post">
      <div class="box-body">

        {% for field in form %}
        {% set has_error = not not field.error %}
        <div class="form-group {% if has_error %}has-error{% endif %}">
          <label for="inputEmail3" class="col-sm-2 control-label">{{ field.title }}</label>

          <div class="col-sm-2">
            {{ field.serialize()|safe }}
          </div>
          {% if has_error %}
            {% for msg in field.error.messages() %}
        <span class="help-block">{{ msg }}</span>
            {% endfor %}
        {% endif %}
        </div>
        {% endfor %}
      </div>
      <!-- /.box-body -->
      <div class="box-footer">
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-default" href="{{ request.route_url('municipalities', traverse=()) }}">Back</a>
          </div>
        </div>
      </div>
    </form>
  </div>
  <!-- /.box -->

  </div>
  </div>
{% endblock content %}