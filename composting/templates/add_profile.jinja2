{% extends 'base_admin.jinja2' %}
{% block title %}Add Site Profile{% endblock %}
{% block main_column %}
<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
     {{ self.title() }}
  </h1>
  <ol class="breadcrumb">
    {% block breadcrumbs %}{% endblock %}
  </ol>
</section>
<section class="content">
  <div class="row">

    <div class="col-md-12">
    <!-- general form elements -->
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title">Add Site Profile</h3>
      </div>
      <!-- /.box-header -->
      <!-- form start -->
      <form class="form-horizontal" data-role="form" method="post">
        {% include 'includes/form_body.jinja2'%}
        <!-- /.box-body -->
        <div class="box-footer">
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-primary">Save</button>
              <a class="btn btn-default" href="{{ request.route_url('municipalities', traverse=()) }}">Back</a>
            </div>
          </div>
        </div>
      </form>
    </div>
    <!-- /.box -->

    </div>
  </div>
</section>
{% endblock %}
