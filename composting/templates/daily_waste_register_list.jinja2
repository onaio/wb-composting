{% extends 'base_municipality.jinja2' %}
{% from 'macros/badge_class_from_status.jinja2' import badge_class_from_status %}
{% from 'macros/action_buttons.jinja2' import action_buttons %}
{% block title %}Daily Waste Register{% endblock %}
{% block description %}List of daily waste register records{% endblock %}
{% block breadcrumbs %}
{% endblock breadcrumbs %}
{% block content %}
  <!-- filter row -->
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-body">
          <form class="form-inline" data-role="form">
            <div class="form-group">
              <label for="inputEmail3" class="col-sm-2 control-label">Show:</label>
              <label class="checkbox-inline">
                <input name="pending" type="checkbox" id="inlineCheckbox1" value="1" {% if statuses.pending is defined %}checked="checked"{% endif %}> Pending
              </label>
              <label class="checkbox-inline">
                <input name="approved" type="checkbox" id="inlineCheckbox2" value="1" {% if statuses.approved is defined %}checked="checked"{% endif %}> Approved
              </label>
              <label class="checkbox-inline">
                <input name="rejected" type="checkbox" id="inlineCheckbox3" value="1" {% if statuses.rejected is defined %}checked="checked"{% endif %}> Rejected
              </label>
            </div>
            <button type="submit" class="btn btn-primary btn-sm">Update</button>
          </form>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
  </div>
  <!-- /filter row -->

  <div class="row">
    <div class="col-xs-12">
      {% for group in items|groupby('date')|sort(True) %}
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">{{ group.grouper|format_date(request) }}</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <form method="post">
            <table class="table table-hover">
              <tbody>
              <tr>
                <th>Time</th>
                <th>Vehicle #</th>
                <th>Skip #</th>
                <th>Skip Type</th>
                <th>Height</th>
                <th>Volume</th>
                <th>Tonnage</th>
                <th>Remarks</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
              {% for daily_waste in group.list %}
                {% set report = daily_waste.json_data %}
                {% set status = daily_waste.status %}
                {% set tonnage = daily_waste.tonnage %}
                <tr>
                  <td>{{ daily_waste.time|format_time(request) }}</td>
                  <td>{{ report.vehicle_number }}</td>
                  <td>{{ report.skip_number }}</td>
                  <td>{{ report.skip_type }}</td>
                  <td>{% if report.waste_height %}{{ report.waste_height }}m{% endif %}</td>
                  <td>{% if daily_waste.volume is not none %}{{ daily_waste.volume }}m<sup>3</sup>{% endif %}</td>
                  <td>{% if tonnage is not none %}{{ tonnage|format_decimal(request) }}t{% else %}-{% endif %}</td>
                  <td>
                    {% if report.remarks %}
                    <div class="overflow-tooltip" data-toggle="tooltip" title="{{ report.remarks }}">
                      <a href="javascript:;">{{ report.remarks }}</a>
                    </div>
                    {% endif %}
                  </td>
                  <td><span
                      class="label {{ badge_class_from_status(status) }}">{{ status }}</span>
                  </td>
                  <td>
                    <a class="btn btn-default btn-xs btn-details" data-url="{{ request.route_path('submissions', traverse=(daily_waste.id,)) }}">View</a>
                    {{ action_buttons(request, daily_waste) }}
                  </td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </form>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
      {% endfor %}
    </div>
  </div>
{% endblock %}